        "# Given values\n",
        "x = 20  # number of kilometers traveled\n",
        "\n",
        "# Ola fare details\n",
        "m_ola = 2   # rate per kilometer for Ola\n",
        "c_ola = 50  # base fare for Ola (fixed fare)\n",
        "\n",
        "# Uber fare details\n",
        "m_uber = 2.5   # rate per kilometer for Uber\n",
        "c_uber = 35    # base fare for Uber\n",
        "c_uber_fare = 5  # additional fixed fare for Uber\n",
        "\n",
        "# Calculate the total fares for both Ola and Uber\n",
        "y_ola = (x * m_ola) + c_ola\n",
        "y_uber = (x * m_uber) + c_uber + c_uber_fare\n",
        "\n",
        "# Compare the prices\n",
        "if y_ola < y_uber:\n",
        "    print(f\"Ola is cheaper. The fare is: ${y_ola}\")\n",
        "elif y_ola > y_uber:\n",
        "    print(f\"Uber is cheaper. The fare is: ${y_uber}\")\n",
        "else:\n",
        "    print(f\"Ola and Uber have the same fare: ${y_ola}\")\n"
      ]
    }
  ]
